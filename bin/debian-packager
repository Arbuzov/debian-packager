#!/usr/bin/env node

'use strict';

var debianPackager = require('../tasks/debian_package.js');
var fs = require('fs-extra');

var config = process.argv[2];

if (!config) {
    return console.error('Please provide a config file like: `debian_package package.json`');
}

fs.readJson(config, function (err, config) {
    if (err) {
        return console.error(err.message);
    }

    debianPackager.create(config);
});
